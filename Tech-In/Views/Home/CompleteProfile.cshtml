@model Tech_In.Models.ViewModels.ProfileViewModels.CompleteProfileVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Complete Profile</title>
    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <script src="~/js/jquery.min.js"></script>
    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <!-- Nav -->
    <nav id="nav" class="navbar @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "nav-transparent" : "")">
        <div class="container">
            <div class="navbar-header">
                <!-- Logo -->
                <div class="navbar-brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo" src="~/images/logo.png" alt="logo">
                        <img class="logo-alt" src="~/images/logo-alt.png" alt="logo">
                    </a>
                </div>
                <!-- /Logo -->
                <!-- Collapse nav button -->
                <div class="nav-collapse">
                    <span></span>
                </div>
                <!-- /Collapse nav button -->
            </div>
            <!--  Main navigation  -->


            @await Html.PartialAsync("_LoginPartial")
            <!-- /Main navigation -->

        </div>
    </nav>
    <!-- /Nav -->
    <br />
    <div class="container">
        <center>
            <h3>Almost there! <small>One Last Step</small></h3>
        </center>
        <hr />
        <div class="row">
            <div class="col-md-push-2 col-md-8">
                <form asp-action="CompleteProfileAsync" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="DOB" class="control-label"></label>
                                <input asp-for="DOB" class="form-control" />
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="control-label">Public or Private</label>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.DOBVisibility)
                                        Make Date of Birth Public.
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <label asp-for="Gender" class="control-label"></label>
                            <div class="form-group">
                                <label class="radio-inline">
                                    <input type="radio" asp-for="Gender" value="0" checked> Male
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" asp-for="Gender" value="1"> Female
                                </label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="CVImage" class="control-label"></label>
                                <input asp-for="CVImage" type="file" />
                                <span asp-validation-for="CVImage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="control-label">Country</label>
                                @if (ViewBag.CountryList != null)
    {
                            @Html.DropDownListFor(model => model.CountryId, ViewBag.CountryList as SelectList, "--Select--", new { @class = "form-control" })
}
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="control-label">City</label>
                                @Html.DropDownListFor(m => m.CityId, new SelectList(""), "--Select--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CityId, "", new { @class = "red" })
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Save & Continue</button>
</div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/main.js"></script>
    <script>
        //For DIsplaying Cities List
        $("#CountryId").change(function () {
            var countryId = $(this).val();

            $.ajax({
                type: "POST",
                url: "/User/GetCitiesList?CountryId=" + countryId,
                contentType: "html",
                success: function (response) {

                    $("#CityId").empty();
                    $("#CityId").append(response);

                }

            })
        })
    </script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
