@model Tech_In.Models.ViewModels.ProfileViewModels.CompleteProfileVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Complete Profile</title>
    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <!-- Nav -->
    <nav id="nav" class="navbar @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "nav-transparent" : "")">
        <div class="container">
            <div class="navbar-header">
                <!-- Logo -->
                <div class="navbar-brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo" src="~/images/logo.png" alt="logo">
                        <img class="logo-alt" src="~/images/logo-alt.png" alt="logo">
                    </a>
                </div>
                <!-- /Logo -->
                <!-- Collapse nav button -->
                <div class="nav-collapse">
                    <span></span>
                </div>
                <!-- /Collapse nav button -->
            </div>
            <!--  Main navigation  -->


            @await Html.PartialAsync("_LoginPartial")
            <!-- /Main navigation -->

        </div>
    </nav>
    <!-- /Nav -->
    <br />
    <div class="container">
        <center>
            <h3>Almost there! <small>One Last Step</small></h3>
        </center>
        <hr />
        <div class="row">
            <div class="col-md-push-2 col-md-8">
                <form asp-action="CompleteProfile">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="DOB" class="control-label"></label>
                                <input asp-for="DOB" class="form-control" />
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <label asp-for="DOBVisibility" class="control-label"></label>
                            <br />
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <label asp-for="Gender" class="control-label"></label>
                            <div class="form-group">
                                <label class="radio-inline">
                                    <input type="radio" asp-for="Gender" value="1" checked> Male
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" asp-for="Gender" value="2"> Female
                                </label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="CVImage" class="control-label"></label>
                                <input asp-for="CVImage" type="file" />
                                <span asp-validation-for="CVImage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="CityID" class="control-label"></label>
                                <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID"></select>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="CityID" class="control-label"></label>
                                <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID"></select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Save & Continue" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/main.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
